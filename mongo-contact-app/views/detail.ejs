<link rel="stylesheet" href="css/style.css">

<div class="container">
    <h2>Detail Contact</h2>

    <!-- menangani jika nama pada params tidak ada di database -->
    <% if (!contact) { %>
     <p>Data kontak tidak ditemukan.</p>
     <a href="/contact">Kembali</a>
    <% } else {%>

    <h5 class="nama"><%= contact.nama %></h5>
    <h6 class="nohp"><%= contact.nohp %></h6>
    <p class="ad"><%= contact.email %></p>
    <a href="/contact/edit/<%= contact.nama %>" class="edit-btn">Edit</a> 
    <br>
    <a href="/contact/delete/<%= contact.nama %>" onclick="return confirm('yakin?');" class="delete-btn">Hapus</a> 
    <br><br>
    <a href="/contact">&laquo;  Kembali</a>    

    <% } %>
</div>